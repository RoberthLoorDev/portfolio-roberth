<style>
     .toast {
          right: -22rem; /* Inicia fuera de la pantalla a la derecha */
     }

     .showToast {
          animation: toastAnimation 6s forwards;
     }

     @keyframes toastAnimation {
          0% {
               right: -22rem; /* Inicia fuera de la pantalla a la derecha */
          }
          10% {
               right: 2rem; /* Aparece en la pantalla desde la derecha */
          }
          90% {
               right: 2rem; /* Se queda visible en la pantalla por un tiempo */
          }
          100% {
               right: -22rem; /* Se mueve fuera de la pantalla a la derecha */
          }
     }
</style>
