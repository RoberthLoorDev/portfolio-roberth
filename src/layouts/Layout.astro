---
interface Props {
     title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
     <head>
          <meta charset="UTF-8" />
          <meta name="viewport" content="width=device-width, initial-scale=1.0" />
          <title>Roberth Loor | Frontend Developer & Web Designer Portfolio</title>

          <meta
               property="og:title"
               content="Roberth Loor | Frontend Developer & Web Designer Portfolio"
          />
          <meta
               property="og:description"
               content="Roberth's portfolio: Experienced Frontend Developer and Web Designer creating quality digital experiences. View my projects and skills."
          />
          <meta
               property="og:image"
               content="https://i.ibb.co/S6T5Nct/banner-portfolio.png"
          />
          <meta property="og:url" content="https://portfolio-roberth.vercel.app/" />
          <meta property="og:type" content="website" />

          <!-- 
          
          -->

          <meta
               name="description"
               content="Roberth's portfolio: Experienced Frontend Developer and Web Designer creating quality digital experiences. View my projects and skills."
          />
          <meta
               name="keywords"
               content="Frontend Developer, Web Designer, Portfolio, Digital Experiences, Web Development, NextJS, Vue, Figma, Backend, Express, Astro "
          />
          <meta name="author" content="Roberth Loor" />

          <link rel="icon" type="image/png" href="/public/icon.png" />

          <meta name="generator" content={Astro.generator} />
          <link rel="preconnect" href="https://fonts.googleapis.com" />
          <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
          <link
               href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
               rel="stylesheet"
          />
     </head>
     <body class="flex justify-center">
          <div class="max-w-[80rem] w-full">
               <slot />
          </div>
     </body>
</html>
<style is:global>
     html {
          font-family: Poppins, system-ui, sans-serif;
          background: #090c1a;
          background-size: 224px;
          scroll-behavior: smooth;
     }

     h1,
     h2,
     h3,
     h4,
     p,
     span {
          color: white;
     }

     h3 {
          font-size: 30px; /* Equivalente a text-3xl en Tailwind */
          font-weight: 600;
     }

     h4 {
          font-size: 18px;
          font-weight: 600;
     }
     section {
          scroll-margin-top: 90px;
     }

     /* Focus text */
     f {
          color: #67abff;
          font-weight: 700;
     }
</style>
