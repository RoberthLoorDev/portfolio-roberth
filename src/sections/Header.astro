---
import { Image } from 'astro:assets'
import { github, linkedin, headerBackground, instagram } from '../assets/images'

const socials = [
     {
          name: 'Linkedin',
          href: 'https://www.linkedin.com/in/roberth-loor-837744227/?locale=en_US',
          icon: linkedin,
     },
     { name: 'Github', href: 'https://github.com/RoberthLoorDev', icon: github },
     {
          name: 'Instagram',
          href: 'https://www.instagram.com/roberth.loor10/',
          icon: instagram,
     },
]
---

<section class="relative flex mt-10 lg:mt-28 mx-4 lg:mx-20" id="header_section">
     <div>
          <span class="text-lg text-primary font-semibold">Welcome to my portfolio</span>
          <h2
               class="title-presentation font-bold mt-7 text-6xl lg:text-7xl lg:leading-[5.5rem]"
          >
               Hello, my <br /> name's<span class="text-primary"> Roberth</span>.
          </h2>
          <h1
               class="description-presentation text-textGray font-normal text-start mt-5 max-w-96"
          >
               <strong class="text-white font-bold">Frontend developer</strong> with a passion
               for <strong class="text-white font-bold">ui ux design</strong>
               looking to create quality <strong class="text-white font-bold"
                    >digital experiences.</strong
               >
          </h1>

          <!-- button section -->
          <div class="flex flex-col">
               <div class="flex gap-6 flex-col lg:flex-row my-12">
                    <a href="mailto:dayvidlife@gmail.com" target="_blank">
                         <button
                              class="text-white bg-[#026eed] h-14 w-36 rounded-xl text-base font-semibold flex items-center justify-center gap-4 border-2 border-[#026eed] duration-150 hover:bg-[#0251b3] hover:border-[#0251b3] active:bg-[#024599]"
                         >
                              <svg
                                   xmlns="http://www.w3.org/2000/svg"
                                   width="24"
                                   height="24"
                                   viewBox="0 0 24 24"
                                   fill="none"
                                   stroke="#ffffff"
                                   stroke-width="2"
                                   stroke-linecap="round"
                                   stroke-linejoin="round"
                                   class="icon icon-tabler icons-tabler-outline icon-tabler-mail"
                                   ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                                   ></path><path
                                        d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"
                                   ></path><path d="M3 7l9 6l9 -6"></path></svg
                              >
                              Mail me</button
                         >
                    </a>

                    <a
                         href="https://drive.google.com/file/d/1XLdEK8ioLz_P6sFo6oWROXgX_EcroO1v/view?usp=sharing"
                         target="_blank"
                    >
                         <button
                              class="text-white h-14 w-48 rounded-xl text-base font-semibold flex items-center justify-center gap-4 border-2 border-[#026eed]"
                         >
                              <svg
                                   xmlns="http://www.w3.org/2000/svg"
                                   width="24"
                                   height="24"
                                   viewBox="0 0 24 24"
                                   fill="none"
                                   stroke="#ffffff"
                                   stroke-width="2"
                                   stroke-linecap="round"
                                   stroke-linejoin="round"
                                   class="icon icon-tabler icons-tabler-outline icon-tabler-download"
                                   ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                                   ></path><path
                                        d="M4 17v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2 -2v-2"
                                   ></path><path d="M7 11l5 5l5 -5"></path><path
                                        d="M12 4l0 12"></path></svg
                              >
                              Download CV</button
                         >
                    </a>
               </div>

               <div class="flex items-center h-10">
                    <!-- <span class="font-bold text-lg"> Contact me: </span> -->

                    <!-- social media -->
                    {
                         socials.map(({ name, icon, href }) => (
                              <a
                                   class="p-5 flex justify-center items-center relative network"
                                   href={href}
                                   target="_blank"
                              >
                                   <Image
                                        class="w-auto h-[19px]"
                                        alt="Linkedin"
                                        src={icon}
                                   />
                                   <span class="font-light text-lg ml-2">{name}</span>
                              </a>
                         ))
                    }
               </div>
          </div>

          <img
               class="shadow-image-header absolute -top-10 right-0 -z-10 w-auto h-[552px] opacity-0 lg:opacity-50"
               src={headerBackground.src}
          />
     </div>
</section>

<style>
     /* animations for header */
     .shadow-image-header {
          animation: show-image-header 1.5s ease-out;
     }

     .title-presentation {
          animation: title-animation 1s forwards;
     }

     .description-presentation {
          animation: description-animation 1s forwards;
     }

     @keyframes description-animation {
          0% {
               opacity: 0;
               transform: translateY(-50px);
          }

          30% {
               opacity: 0;
          }
          100% {
               opacity: 1;
               transform: translateY(0px);
          }
     }

     @keyframes show-image-header {
          0% {
               opacity: 0;
          }
          100% {
               opacity: 0.5;
          }
     }

     @keyframes title-animation {
          0% {
               opacity: 0;
               transform: translateY(100px);
          }
          100% {
               opacity: 1;
               transform: translateY(0px);
          }
     }
</style>

<style>
     .network {
          position: relative; /* Asegura que el pseudo-elemento ::after esté posicionado respecto al .network */
     }

     .network::after {
          content: ''; /* Contenido generado */
          position: absolute; /* Posición absoluta respecto al div padre */
          bottom: 7px; /* Alineado con el borde inferior del div */
          width: 100%; /* Ancho completo del div */
          height: 4px; /* Altura de la barra inferior */
          background-color: #2d8cfc; /* Color de la barra inferior */
          border-radius: 100px;
          transform: scaleX(
               0
          ); /* Escala inicial cero para que comience desde el centro */
          transform-origin: center; /* Origen de la transformación en el centro */
          transition: transform 0.3s ease; /* Efecto de transición suave solo en la transformación */
     }

     .network:hover::after {
          transform: scaleX(1); /* Escala completa al hacer hover */
     }
</style>
